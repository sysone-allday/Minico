<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="800" styleClass="signup-root" stylesheets="@../../css/signup.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="allday.minico.controller.member.SignUpController">

    <VBox alignment="CENTER" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">
        <VBox alignment="CENTER" spacing="16" styleClass="signup-form-container">
            <!-- 회원가입 타이틀 -->
            <Label layoutX="160.0" layoutY="41.0" styleClass="signup-title" text="회원가입" />

            <!-- 사용자 ID -->
            <TextField fx:id="idField" layoutX="200" layoutY="95" promptText="소문자와 숫자 조합, 8자 이상" styleClass="signup-input" />
            <Button fx:id="checkIdButton" layoutX="393.0" layoutY="95.0" onAction="#checkId" text="중복확인" />

            <!-- 닉네임 -->
            <TextField fx:id="nicknameField" styleClass="signup-input" promptText="닉네임 2~10 자" />

            <!-- 비밀번호 -->
            <PasswordField fx:id="pwField" styleClass="signup-input" promptText="비밀번호 영어와 숫자 조합, 8자 이상" />

            <!-- 비밀번호 확인 -->
            <PasswordField fx:id="pwCheckField" styleClass="signup-input" promptText="비밀번호 확인" />

            <TextField fx:id="passwordHint" styleClass="signup-input" promptText="내 생년월일은?" />

            <!-- 이메일 -->
            <TextField fx:id="emailField" styleClass="signup-input" promptText="이메일 입력" />


            <!-- ID 중복확인 안내 -->
            <Label fx:id="signUpResultText" style="-fx-text-fill: gray;" />

            <HBox alignment="CENTER" spacing="40">
                <!-- 뒤로가기 버튼 -->
                <Button fx:id="backToLoginButton" onAction="#backToLogin" text="취소" />
                <!-- 가입 버튼 -->
                <Button fx:id="submitButton" onAction="#submit" text="가입" />
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
