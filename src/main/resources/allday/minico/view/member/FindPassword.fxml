<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="250.0" prefWidth="420.0"
            styleClass="findpassword-root"
            stylesheets="@../../css/findPassword.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="allday.minico.controller.member.FindPasswordController">

    <VBox alignment="TOP_CENTER" spacing="15"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="30"
          AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="20">

        <!-- 타이틀 -->
        <Label text="비밀번호 찾기" styleClass="findpassword-title"/>

        <!-- ID 입력 -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="ID :" styleClass="findpassword-label"/>
            <TextField fx:id="idField" promptText="ID를 입력하세요" styleClass="findpassword-input"/>
            <Button fx:id="findPwHintButton" text="힌트 확인" onAction="#findPwHint" styleClass="findpassword-button"/>
        </HBox>

        <!-- 결과 메시지 -->
        <Label fx:id="resultHintText" wrapText="true" styleClass="findpassword-hint-text"/>
        <Label fx:id="hintLabel" styleClass="findpassword-hint-text"/>

        <!-- 종료 버튼 -->
        <Button fx:id="backToLoginButton" text="종료" onAction="#backToLogin" styleClass="findpassword-button"/>
    </VBox>
</AnchorPane>