<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/21.0.7" xmlns:fx="http://javafx.com/fxml/1" fx:controller="allday.minico.controller.member.LoginController">

    <HBox spacing="40" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="30">

        <!-- 왼쪽 VBox: 로그인 영역 -->
        <VBox alignment="CENTER" prefHeight="440.0" prefWidth="268.0" spacing="20">
            <Label alignment="CENTER" prefHeight="81.0" prefWidth="250.0" text="프로그램 이름">
                <font>
                    <Font size="28" />
                </font>
            </Label>

            <!-- ID -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label minWidth="40" text="ID" />
                <TextField fx:id="idField" prefWidth="200" promptText="아이디 입력" />
            </HBox>

            <!-- PW -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label minWidth="40" text="PW" />
                <PasswordField fx:id="pwField" prefWidth="200" promptText="비밀번호 입력" />
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="25.0" prefWidth="251.0">
                <children>
                    <Button fx:id="findPasswordButton" mnemonicParsing="false" onAction="#findPassword" prefHeight="15.0" prefWidth="92.0" text="비밀번호 찾기" />
                </children>
            </HBox>

            <!-- 로그인/회원가입 버튼 가로정렬 -->
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="loginButton" onAction="#login" prefHeight="22.0" prefWidth="70.0" text="로그인" />
                <Button fx:id="signUpButton" onAction="#signUp" prefHeight="22.0" prefWidth="70.0" text="회원가입" />
            </HBox>
            <Region prefHeight="129.0" prefWidth="251.0" />
            <Button fx:id="ExitButton" mnemonicParsing="false" onAction="#Exit" prefHeight="22.0" prefWidth="65.0" text="종료" />

        </VBox>

        <!-- 오른쪽 이미지 -->
        <StackPane alignment="CENTER" prefHeight="440.0" prefWidth="449.0" style="-fx-background-color: #dddddd; -fx-background-radius: 20;">
            <ImageView fx:id="characterImage" fitHeight="440.0" fitWidth="449.0" preserveRatio="true" />
        </StackPane>

    </HBox>
</AnchorPane>
