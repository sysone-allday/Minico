<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="460.0" prefWidth="600.0" styleClass="my-profile-root"
            stylesheets="@../../css/myProfile.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="allday.minico.controller.member.MyProfileController">

   <VBox alignment="TOP_CENTER" spacing="20"
         AnchorPane.bottomAnchor="20.0"
         AnchorPane.leftAnchor="30.0"
         AnchorPane.rightAnchor="30.0"
         AnchorPane.topAnchor="20.0">

      <!-- 타이틀 -->
      <Label alignment="CENTER" prefHeight="47.0" prefWidth="94.0"
             styleClass="info-label" text="내 정보">
         <font>
            <Font size="15.0" />
         </font>
      </Label>

      <!-- 본문: 좌측 텍스트, 우측 이미지 -->
      <HBox alignment="TOP_LEFT" spacing="30">

         <!-- 텍스트 정보 묶음 -->
         <VBox spacing="12">
            <GridPane hgap="10" vgap="12">
               <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" minWidth="90" />
                  <ColumnConstraints halignment="LEFT" minWidth="260" />
               </columnConstraints>

               <Label styleClass="info-label" text="닉네임 :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <Label fx:id="nicknameText" styleClass="profile-value" text="" GridPane.columnIndex="1" GridPane.rowIndex="0" />

               <Label styleClass="info-label" text="ID :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <Label fx:id="idText" styleClass="profile-value" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />

               <Label styleClass="info-label" text="이메일 :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <Label fx:id="emailText" styleClass="profile-value" text="" GridPane.columnIndex="1" GridPane.rowIndex="2" />

               <Label styleClass="info-label" text="가입일 :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
               <Label fx:id="joindateText" styleClass="profile-value" text="" GridPane.columnIndex="1" GridPane.rowIndex="3" />

               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
            </GridPane>

            <!-- 하단: 레벨, 코인, 경험치 -->
            <HBox alignment="CENTER_LEFT" spacing="25">
               <Label fx:id="levelText" prefHeight="27.0" prefWidth="112.0" styleClass="profile-value" text="레벨 : " />
               <Label fx:id="coinText" styleClass="profile-value" text="코인 : " />
               <Label fx:id="experienceText" styleClass="profile-value" text="경험치 : " />
            </HBox>
         </VBox>

         <!-- 오른쪽 이미지 -->
         <ImageView fx:id="myMinimiImg" fitHeight="100" fitWidth="100" preserveRatio="true" />
      </HBox>

      <Button fx:id="modifyProfileButton" onAction="#modifyProfile"
              prefWidth="225.0" styleClass="my-profile-btn"
              text="회원 정보 수정" wrapText="true">
         <font>
            <Font size="7.0" />
         </font>
      </Button>

      <Button fx:id="deleteAccountButton" onAction="#deleteAccountButtonClick"
              prefWidth="100" styleClass="my-profile-btn"
              text="회원 탈퇴" wrapText="true" />
   </VBox>
</AnchorPane>