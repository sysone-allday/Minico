<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane alignment="CENTER" prefHeight="800" prefWidth="1280" styleClass="root" stylesheets="@../../css/note.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="allday.minico.controller.note.NoteController">

    <!-- 메인 컨테이너 -->
    <StackPane prefHeight="760" prefWidth="1220">
        <HBox alignment="CENTER" maxWidth="1200" prefWidth="1200" spacing="20" style="-fx-padding: 10 10 10 10;">
            
            <!-- 왼쪽 영역 (버튼들과 상태 정보) -->
            <StackPane prefHeight="720" prefWidth="200">
                <VBox alignment="TOP_CENTER" prefWidth="200" spacing="20">
                    <!-- 뒤로가기 버튼 -->
                    <Button fx:id="btnBack" styleClass="back-button" text="〈 Back">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Button>

                    <!-- 상태 정보 박스 -->
                    <VBox alignment="CENTER" prefWidth="190" styleClass="info-box">
                        <!-- 제목 -->
                        <Label styleClass="title-label" text="단어장" />

                        <!-- 페이지 정보 -->
                        <HBox fx:id="boxPagination" alignment="CENTER" spacing="5" style="-fx-border-color: #B3B3B3; -fx-border-width: 3px 0 0 0; -fx-padding: 10px;">
                            <Label style="-fx-font-size: 16px;" text="페이지" />
                            <Text fx:id="currentPageText" styleClass="page-info" text="1" />
                            <Text styleClass="page-info" text=" / " />
                            <Text fx:id="totalPageText" styleClass="page-info" text="1" />
                        </HBox>

                        <!-- 진행 상황 -->
                        <VBox alignment="CENTER" spacing="8" style="-fx-border-color: #B3B3B3; -fx-border-width: 3px 0 0 0; -fx-padding: 10px;">
                            <Text fx:id="progressText" styleClass="progress-info" text="문제를 풀어보세요" />
                        </VBox>
                    </VBox>

                    <!-- 삭제 버튼 -->
                    <Button fx:id="btnDelete" styleClass="delete-button" text="삭제">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                </VBox>
            </StackPane>

            <!-- 오른쪽 영역 (메인 컨텐츠) -->
            <StackPane alignment="CENTER" prefHeight="720" prefWidth="980">
                <VBox alignment="TOP_CENTER" prefHeight="720" prefWidth="958.0" spacing="15">
                    
                    <!-- 메인 게임 영역 -->
                    <VBox fx:id="gamePane" prefHeight="650" prefWidth="950" styleClass="word-game-pane">
                        <padding>
                            <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
                        </padding>
                        
                        <!-- 문제 영역 -->
                        <VBox prefWidth="917.0" spacing="15" VBox.vgrow="ALWAYS">
                            <!-- 문제 제목 -->
                            <Label styleClass="section-title" text="문제" />
                            
                            <!-- 문제 내용 -->
                            <VBox prefHeight="150" styleClass="question-box">
                                <padding>
                                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                                </padding>
                                <Label fx:id="wrongQuestion" alignment="TOP_LEFT" styleClass="question-text" text="여기에 문제가 표시됩니다." wrapText="true">
                                    <font>
                                        <Font name="NeoDunggeunmo" size="20.0" />
                                    </font>
                                </Label>
                            </VBox>

                            <!-- 답안 입력 영역 -->
                            <VBox spacing="10">
                                <Label styleClass="section-title" text="다시 풀기" />
                                <HBox alignment="CENTER_LEFT" prefHeight="60" spacing="10" styleClass="input-box">
                                    <padding>
                                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                                    </padding>
                                    <TextField fx:id="answerInputField" prefWidth="350.0" promptText="정답을 입력하세요..." styleClass="answer-input" HBox.hgrow="ALWAYS">
                                        <cursor>
                                            <Cursor fx:constant="TEXT" />
                                        </cursor>
                                    </TextField>
                                    
                                    <Text fx:id="feedbackLabel" styleClass="feedback-text" text="" textAlignment="CENTER" wrappingWidth="100.0" />
                                    
                                    <Button fx:id="btnSubmitAnswer" prefHeight="43.0" prefWidth="84.0" styleClass="check-button" text="확인">
                                        <cursor>
                                            <Cursor fx:constant="HAND" />
                                        </cursor>
                                    </Button>
                                </HBox>
                            </VBox>

                            <!-- 메모 영역 -->
                            <VBox prefHeight="180" spacing="20">
                                <Label styleClass="section-title" text="메모" />
                                <VBox spacing="10" styleClass="input-box">
                                    <padding>
                                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                                    </padding>
                                    <TextArea fx:id="memoTextArea" prefRowCount="4" promptText="메모를 입력하세요..." styleClass="answer-input" wrapText="true" VBox.vgrow="ALWAYS">
                                        <cursor>
                                            <Cursor fx:constant="TEXT" />
                                        </cursor>
                                    </TextArea>
                                    
                                    <HBox alignment="CENTER_RIGHT" spacing="10">
                                        <Button fx:id="btnSaveMemo" prefHeight="43.0" prefWidth="99.0" styleClass="save-button" text="저장">
                                            <cursor>
                                                <Cursor fx:constant="HAND" />
                                            </cursor>
                                        </Button>
                                    </HBox>
                                </VBox>
                            </VBox>
                        </VBox>
                    </VBox>

                    <!-- 페이지네이션 -->
                    <HBox alignment="CENTER" prefHeight="40" spacing="40">
                        <Button fx:id="btnPrev" prefWidth="50.0" styleClass="pagination-button" text="◀" />
                        
                        <!-- 페이지 점들을 위한 빈 HBox -->
                        <HBox fx:id="pageDots" alignment="CENTER" spacing="8">
                        </HBox>
                        
                        <Button fx:id="btnNext" prefWidth="50.0" styleClass="pagination-button" text="▶" />
                    </HBox>
                </VBox>
            </StackPane>
        </HBox>
    </StackPane>

</StackPane>
