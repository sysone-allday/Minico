<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<VBox fx:controller="allday.minico.controller.TodolistController"
      fx:id="todolist"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      layoutX="100.0"
      layoutY="170.0"
      spacing="30"
      prefHeight="500.0"
      prefWidth="450.0">

    <HBox spacing="10">
        <TextField fx:id="inputField" promptText="새 할 일 입력" HBox.hgrow="ALWAYS"/>
        <Button text="＋" fx:id="addBtn" />
    </HBox>

    <!-- 실제 목록 -->
    <ListView fx:id="listView" prefHeight="390" fixedCellSize="40.0" VBox.vgrow="ALWAYS"/>

    <!-- 진행률 -->
    <ProgressBar fx:id="progress" prefWidth="500" prefHeight="30"/>

</VBox>
