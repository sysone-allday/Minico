<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.text.Text?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
           fx:controller="allday.minico.controller.diary.CalendarController"
           maxWidth="360" maxHeight="440"
           style="-fx-background-color: transparent;">

    <VBox spacing="15" alignment="CENTER"
          prefWidth="360" prefHeight="440"
          style="-fx-background-color: #fff0f5; -fx-border-color: #f4c2c2; -fx-border-width: 4; -fx-border-radius: 20; -fx-background-radius: 20;">

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="prevMonthButton" text="◀"
                    style="-fx-background-color: #f4c2c2; -fx-text-fill: white; -fx-background-radius: 10;" />
            <Text fx:id="monthYearText" style="-fx-font-size: 20px; -fx-fill: #d67fa3; -fx-font-weight: bold;" />
            <Button fx:id="nextMonthButton" text="▶"
                    style="-fx-background-color: #f4c2c2; -fx-text-fill: white; -fx-background-radius: 10;" />
        </HBox>

        <GridPane fx:id="calendarGrid" hgap="5.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
            </columnConstraints>
        </GridPane>

        <Button fx:id="closeButton" text="닫기"
                style="-fx-background-color: #f4c2c2; -fx-text-fill: white; -fx-background-radius: 10;" />
    </VBox>
</StackPane>
