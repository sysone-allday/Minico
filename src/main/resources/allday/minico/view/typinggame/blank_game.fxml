<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="allday.minico.controller.typinggame.BlankGameController"
            prefWidth="1280" prefHeight="800"
            alignment="CENTER"
            styleClass="root">

    <StackPane prefWidth="1200">
        <HBox alignment="CENTER" maxWidth="1200" prefWidth="1200" spacing="10" style="-fx-padding: 20 0 0 0;">
            <!--   화면 왼쪽 영역     -->
            <StackPane prefWidth="200" prefHeight="760 ">
                <VBox alignment="TOP_CENTER" spacing="30">
                    <!-- 상단 Back 버튼 -->
                    <Button fx:id="backButton"
                            prefWidth="120" prefHeight="40"
                            text="〈 Back"
                            styleClass="back-button"
                            onAction="#goToTypingGame" />

                    <!-- 현재 문제 표시 -->


                    <!-- 성공 -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="성공" textFill="#4EA0FF" style="-fx-font-size: 25px;"/>
                        <Label fx:id="successCount" text="0개" style="-fx-font-size: 25px;"/>
                    </HBox>

                    <!-- 실패 -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="실패" textFill="#FFA5A5" style="-fx-font-size: 25px;" />
                        <Label fx:id="failCount" text="0개" style="-fx-font-size: 25px;" />
                    </HBox>
                </VBox>
            </StackPane>

            <!--   화면 오른쪽 영역     -->
            <StackPane prefWidth="1000" prefHeight="760" alignment="CENTER">
                <VBox alignment="TOP_CENTER" prefWidth="900" prefHeight="760" spacing="20" style="-fx-padding: 40 0 0 0;">

                    <VBox spacing="20">
                        <Label text="💡 보기" styleClass="hint-text"/>

                        <!-- 보기 단어 목록 -->
                        <Pane fx:id="wordListPane"
                              prefWidth="900"
                              prefHeight="200"
                              styleClass="word-list-pane">
                        </Pane>
                    </VBox>

                    <!-- 문제 제출 -->
                    <Label fx:id="questionLabel"
                           text="문제가 여기에 나와요"
                           wrapText="true"
                           style="-fx-font-size: 22px; -fx-text-fill: black;"
                           prefWidth="500"
                           alignment="CENTER" />


                    <!-- 입력창 -->
                    <HBox alignment="CENTER">
                        <TextField fx:id="inputField"
                                   prefWidth="400" prefHeight="40"
                                   promptText="입력해주세요.."
                                   onAction="#checkAnswer"
                                   styleClass="word-input" />
                    </HBox>
                </VBox>
            </StackPane>
        </HBox>
    </StackPane>


    <!-- 문제 설명 오버레이 -->
    <StackPane fx:id="introPane"
               visible="false"
               style="-fx-background-color: rgba(0, 0, 0, 0.6);"
               alignment="CENTER"
               pickOnBounds="true">

        <VBox alignment="CENTER" spacing="20"
              prefWidth="400"
              styleClass="result-box">

            <Label text="게임 설명" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

            <Label wrapText="true" style="-fx-font-size: 18px; -fx-text-fill: #333;">
                💡 앞에서 타자 게임에서 성공적으로 입력한 단어들 중 5개가 문제로 출제됩니다.
                빈칸에 들어갈 단어를 맞춰보세요!
            </Label>

            <Button text="시작" onAction="#startBlankGame" styleClass="next-button"/>
        </VBox>
    </StackPane>

    <!-- 결과창 오버레이 -->
    <StackPane fx:id="resultPane"
               visible="false"
               style="-fx-background-color: rgba(0, 0, 0, 0.6);"
               alignment="CENTER"
               pickOnBounds="true">

        <VBox alignment="CENTER" spacing="20"
              prefWidth="400"
              styleClass="result-box">

            <Label fx:id="resultTitle" text="게임 결과" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

            <HBox alignment="CENTER" spacing="10">
                <Label text="성공:" style="-fx-font-size: 20px;" />
                <Label fx:id="resultSuccessLabel" text="0개" style="-fx-font-size: 20px;" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label text="실패:" style="-fx-font-size: 20px;" />
                <Label fx:id="resultFailLabel" text="0개" style="-fx-font-size: 20px;" />
            </HBox>


            <!-- 단어장으로 ? 일단 임시로 메인으로 ㄱㄱ -->
            <Button text="홈 으로" onAction="#goToMain" styleClass="next-button"/>
        </VBox>
    </StackPane>







